@model ITCMS_HUIT.Client.Models.UserViewDTO

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<section class="pcoded-main-container">
    <div class="pcoded-wrapper">
        <div class="pcoded-content" style="margin-top: 60px;">
            <div class="pcoded-inner-content">
                <div class="main-body">
                    <div class="page-wrapper">
                        <!-- [ breadcrumb ] start -->
                        <div class="page-header">
                            <div class="page-block">
                                <div class="row align-items-center">
                                    <div class="col-md-12">
                                        <div class="page-header-title">
                                            <h3 class="m-b-10">Cập nhật quyền cho người dùng</h3>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- [ breadcrumb ] end -->
                        <!-- [ Main Content ] start -->
                        <div class="row">
                            <div class="col-md-6">
                                <form asp-action="Edit" method="post" class="card">
                                    <div asp-validation-summary="All" class="card-body text-danger"></div>
                                    <div class="card-body">                                     
                                        <div class="form-group">
                                            <label asp-for="UserId" class="control-label">ID</label>
                                            <input asp-for="UserId" class="form-control" disabled />
                                            <input type="hidden" asp-for="UserId" />
                                            <span asp-validation-for="UserId" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="UserName" class="control-label">Tên người dùng</label>
                                            <input asp-for="UserName" class="form-control" disabled />
                                            <input type="hidden" asp-for="UserName" />
                                            <span asp-validation-for="UserName" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Email" class="control-label">Email</label>
                                            <input asp-for="Email" class="form-control" disabled />
                                            <input type="hidden" asp-for="Email" />
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="Roles" class="control-label">Nhóm quyền</label>
                                            <div class="input-group">
                                                <select asp-for="Roles" asp-items="@(new SelectList(Model.Roles))" class="form-control" multiple></select>
                                                <input type="text" name="newRole" class="form-control" placeholder="Thêm role mới" />
                                                <button type="submit" class="btn btn-primary">Cập Nhật</button>
                                            </div>
                                            <span asp-validation-for="Roles" class="text-danger"></span>
                                        </div>

                                       
                                        <div class="text-danger">
                                            @Html.ValidationMessageFor(model => model.Roles)
                                        </div>

                                        <div class="mt-3">                                          
                                            <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>

                        <!-- [ Main Content ] end -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

