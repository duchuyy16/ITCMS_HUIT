@model ITCMS_HUIT.Client.Models.GiaoVienDTO

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="pcoded-main-container">
    <div class="pcoded-wrapper">
        <div class="pcoded-content" style="margin-top: 60px;">
            <div class="pcoded-inner-content">
                <div class="main-body">
                    <div class="page-wrapper">
                        <!-- [ breadcrumb ] start -->
                        <div class="page-header">
                            <div class="page-block">
                                <div class="row align-items-center">
                                    <div class="col-md-12">
                                        <div class="page-header-title">
                                            <h3 class="m-b-10">Thêm Giáo Viên</h3>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- [ breadcrumb ] end -->
                        <!-- [ Main Content ] start -->
                        <div class="row">
                            <div class="col-md-6">
                                <form asp-action="Create" class="card">
                                    <div asp-validation-summary="ModelOnly" class="card-body text-danger"></div>
                                    <div class="card-body">
                                        <div class="form-group">
                                            <label asp-for="IdgiaoVien" class="control-label">Mã Giáo Viên</label>
                                            <input asp-for="IdgiaoVien" class="form-control" />                                     
                                            <span asp-validation-for="IdgiaoVien" class="text-danger"></span>
                                        </div>
                                        @* @if (ViewData.ModelState.TryGetValue("IdgiaoVien", out var modelErrors))
                                        {
                                            <div class="alert alert-danger">
                                                @foreach (var error in modelErrors.Errors)
                                                {
                                                    <p>@error.ErrorMessage</p>
                                                }
                                            </div>
                                        } *@
                                        <div class="form-group">
                                            <label asp-for="TenGiaoVien" class="control-label">Tên Giáo Viên</label>
                                            <input asp-for="TenGiaoVien" class="form-control" />
                                            <span asp-validation-for="TenGiaoVien" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="TrinhDo" class="control-label">Trình Độ</label>
                                            <input asp-for="TrinhDo" class="form-control" />
                                            <span asp-validation-for="TrinhDo" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="ChungChi" class="control-label">Chứng Chỉ</label>
                                            <input asp-for="ChungChi" class="form-control" />
                                            <span asp-validation-for="ChungChi" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="HoSoCaNhan" class="control-label">Hồ Sơ Cá Nhân</label>
                                            <input asp-for="HoSoCaNhan" class="form-control" />
                                            <span asp-validation-for="HoSoCaNhan" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="HinhAnh" class="control-label">Hình Ảnh</label>
                                            <input asp-for="HinhAnh" class="form-control" />
                                            <span asp-validation-for="HinhAnh" class="text-danger"></span>
                                        </div>
                                        <div class="mt-3">
                                            <button type="submit" class="btn btn-primary">Thêm</button> |
                                            <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
                                        </div>
                                    </div>

                                </form>
                            </div>
                        </div>
                        <!-- [ Main Content ] end -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>




