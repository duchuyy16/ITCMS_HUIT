@model ITCMS_HUIT.Client.Models.KhoaHocDTO

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<script src="~/ckeditor/ckeditor.js"></script>

<section class="pcoded-main-container">
    <div class="pcoded-wrapper">
        <div class="pcoded-content" style="margin-top: 60px;">
            <div class="pcoded-inner-content">
                <div class="main-body">
                    <div class="page-wrapper">
                        <!-- [ breadcrumb ] start -->
                        <div class="page-header">
                            <div class="page-block">
                                <div class="row align-items-center">
                                    <div class="col-md-12">
                                        <div class="page-header-title">
                                            <h3 class="m-b-10">Cập nhật thông tin khóa học</h3>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- [ breadcrumb ] end -->
                        <!-- [ Main Content ] start -->
                        <div class="row">
                            <div class="col-md-6">
                                <form asp-action="Edit" method="post" class="card" enctype="multipart/form-data">
                                    <div asp-validation-summary="ModelOnly" class="card-body text-danger"></div>
                                    <div class="card-body">
                                        <div class="form-group">
                                            <label asp-for="IdkhoaHoc" class="control-label">ID Khóa Học</label>
                                            <input asp-for="IdkhoaHoc" class="form-control" readonly />
                                            <span asp-validation-for="IdkhoaHoc" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="IdchuongTrinh" class="control-label">Chương Trình</label>
                                            <select asp-for="IdchuongTrinh" asp-items="ViewBag.IdChuongTrinh" class="form-control">
                                                <option value="">-- Chọn Chương Trình --</option>
                                            </select>
                                            <span asp-validation-for="IdchuongTrinh" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="TenKhoaHoc" class="control-label">Tên Khóa Học</label>
                                            <input asp-for="TenKhoaHoc" class="form-control" />
                                            <span asp-validation-for="TenKhoaHoc" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="SoGio" class="control-label">Số Giờ</label>
                                            <input asp-for="SoGio" class="form-control" />
                                            <span asp-validation-for="SoGio" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="SoTuan" class="control-label">Số Tuần</label>
                                            <input asp-for="SoTuan" class="form-control" />
                                            <span asp-validation-for="SoTuan" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="HocPhi" class="control-label">Học Phí</label>
                                            <input asp-for="HocPhi" class="form-control" />
                                            <span asp-validation-for="HocPhi" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Mota" class="control-label">Mô tả</label>
                                            <textarea asp-for="Mota" id="editor1" name="Mota" class="form-control" rows="4"></textarea>
                                            <span asp-validation-for="Mota" class="text-danger"></span>
                                        </div>
                                        @* <div class="form-group">
                                            <label asp-for="HinhAnh" class="control-label">Hình Ảnh</label>
                                            <input asp-for="HinhAnh" class="form-control" />
                                            <span asp-validation-for="HinhAnh" class="text-danger"></span>
                                        </div> *@
                                        <div class="form-group">
                                            <label asp-for="HinhAnh" class="control-label">Hình Ảnh</label>
                                            <input type="file" name="imageFile" class="form-control" />
                                            <input type="hidden" asp-for="HinhAnh" class="form-control" />
                                            <span asp-validation-for="HinhAnh" class="text-danger"></span>
                                        </div>
                                        <div class="mt-3">
                                            <button type="submit" class="btn btn-primary">Cập Nhật</button> |
                                            <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <!-- [ Main Content ] end -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    CKEDITOR.replace('editor1', {
    });
</script>