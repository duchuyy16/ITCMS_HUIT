@model ITCMS_HUIT.Client.Models.ThongTinHocVienDTO

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="pcoded-main-container">
    <div class="pcoded-wrapper">
        <div class="pcoded-content" style="margin-top: 60px;">
            <div class="pcoded-inner-content">
                <div class="main-body">
                    <div class="page-wrapper">
                        <div class="page-header">
                            <div class="page-block">
                                <div class="row align-items-center">
                                    <div class="col-md-12">
                                        <div class="page-header-title">
                                            <h3 class="m-b-10">Thông tin chi tiết học viên</h3>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-8">
                                <div class="card">
                                    <div class="card-body">
                                        <dl class="row">
                                            @{
                                                DisplayInfo("Mã Học Viên", Model.IdhocVienNavigation?.IdhocVien!);
                                                DisplayInfo("Tên Học Viên", Model.IdhocVienNavigation?.TenHocVien!);
                                                DisplayInfo("Ngày Sinh", Model.IdhocVienNavigation?.NgaySinh!);
                                                DisplayInfo("Email", Model.IdhocVienNavigation?.Email!);
                                                DisplayInfo("Số Điện Thoại", Model.IdhocVienNavigation?.Sdt!);
                                                DisplayInfo("Địa Chỉ", Model.IdhocVienNavigation?.DiaChi!);
                                                DisplayInfo("Ngày Đăng Ký", Model.IdhocVienNavigation?.NgayDangKy!);
                                                DisplayInfo("Đối Tượng", Model.IdhocVienNavigation?.IddoiTuong!);
                                                DisplayInfo("Trạng Thái", Model.IdhocVienNavigation?.IdtrangThai!);

                                                DisplayInfo("Mã Lớp Học", Model.IdlopHocNavigation?.IdlopHoc!);
                                                DisplayInfo("Tên Lớp Học", Model.IdlopHocNavigation?.TenLopHoc!);
                                                DisplayInfo("Thời Gian", Model.IdlopHocNavigation?.ThoiGian!);
                                                DisplayInfo("Ngày Bắt Đầu", Model.IdlopHocNavigation?.NgayBatDau!);
                                                DisplayInfo("Ngày Kết Thúc", Model.IdlopHocNavigation?.NgayKetThuc!);
                                                DisplayInfo("Địa Điểm", Model.IdlopHocNavigation?.DiaDiem!);
                                                DisplayInfo("Phòng Học", Model.IdlopHocNavigation?.PhongHoc!);
                                                DisplayInfo("Khóa Học", Model.IdlopHocNavigation?.IdkhoaHoc!);
                                                DisplayInfo("Giáo Viên", Model.IdlopHocNavigation?.IdgiaoVien!);
                                                DisplayInfo("Điểm", Model.Diem!);
                                                DisplayInfo("Ngày Thông Báo", Model.NgayThongBao!);
                                                DisplayInfo("Trạng Thái Thanh Toán", Model.TrangThaiThanhToan!);

                                                DisplayInfo("Số Lần Vắng Mặt", Model.SoLanVangMat!);
                                                DisplayInfo("Lý Do Thông Báo", Model.LyDoThongBao!);
                                                DisplayInfo("Học Phí", string.Format("{0:N0} VNĐ", Model.HocPhi));
                                                DisplayInfo("Ngày Giờ Giao Dịch", Model.NgayGioGiaoDich!);
                                                DisplayInfo("Trạng Thái Thanh Toán", Model.TrangThaiThanhToan!);
                                            }
                                     
                                        </dl>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="mt-3">
                            <a asp-action="Edit" asp-route-IdhocVien="@Model.IdhocVien" asp-route-IdlopHoc="@Model.IdlopHoc" class="btn btn-primary">Sửa</a> |
                            <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@{
    void DisplayInfo(string label, object value)
    {
        <dt class="col-sm-4">@label:</dt>
        <dd class="col-sm-8">@value</dd>
    }
}
